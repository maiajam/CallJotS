<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".ui.fragment.AllContactFrag"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:id = "@+id/Allconiiitem_Lin"
        android:orientation="horizontal"
        >
       <ImageView
           android:layout_weight="0.25"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:visibility="visible"
           android:id ="@+id/ContPhoto_imgView"
           android:src="@drawable/conphoto"/>

        <LinearLayout

            android:layout_marginLeft="10dp"
            android:layout_weight="0.90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mai waleed "
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                android:id="@+id/ContName_txt"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="0.90"
                    android:text="0799585969 "
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    android:fontFamily="@font/semibold"
                    android:layout_height="wrap_content"
                    android:id="@+id/ContPhoneNo_txt"/>
            </LinearLayout>


        </LinearLayout>

        <ImageView

            android:layout_weight="0.10"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/AddToSpec_img"
            android:textAlignment="viewEnd"
            android:layout_gravity="end"
            android:src="@drawable/addspec"
            />
    </LinearLayout>


</RelativeLayout>