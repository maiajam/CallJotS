<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    tools:context=".ui.activity.ContactNotes">

<ImageView
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:id ="@+id/callType_row_img"
    android:src="@drawable/income_call"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Date_row_Txt"
            android:textColor="@color/colorPrimary"
            android:text="sdsadadadasd"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/callDuration_row_Txt"
            android:textColor="@color/colorPrimary"
            android:text="@string/CallDuration" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/callDurationVa_row_Txt"
            android:textColor="@color/colorPrimary"
            android:text="@string/CallDuration"/>
    </LinearLayout>

</LinearLayout>