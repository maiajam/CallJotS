<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".ui.fragment.NotesFrag">

    <android.support.v7.widget.CardView
        android:paddingLeft="10dp"

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#ffffff"
        android:id="@+id/ContactNot_CardView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

               <LinearLayout
                   android:layout_marginLeft="15dp"
                   android:layout_marginTop="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="0.75"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_marginTop="5dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="15sp"
                       android:text="notetitle"
                       android:fontFamily="@font/semibold"
                       android:textColor="@color/colorPrimary"
                       android:id="@+id/NoteTitle_row_txt"/>

                   <ImageView
                       android:visibility="invisible"
                       android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                       android:layout_width="15dp"
                       android:layout_height="15dp"
                       android:id="@+id/checkDone_row_img"
                       android:src="@drawable/check_done"/>
               </LinearLayout>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.25"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/menu_row_image"
                    android:src="@android:drawable/ic_menu_more"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/date_row_imageView"
                    android:src="@drawable/date"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/NoteToken_row_txt"
                    android:textSize="10sp"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/NoteToken"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/NoteDate_row_txt"
                    android:textSize="10sp"
                    android:fontFamily="@font/regulaer"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/NoteToken"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="10dp"
                    android:id="@+id/ContactPhoto_all_imageView"
                    android:src="@drawable/conphoto"
                    android:visibility="gone"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/NoteDetials_txt"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/regulaer"
                    android:text ="dsfsf fssf dsfs fsdf fs"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
